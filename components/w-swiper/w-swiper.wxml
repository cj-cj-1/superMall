<!--components/w-swiper/w-swiper.wxml-->
<swiper 
  class="swiper"
  indicator-dots
  indicator-active-color="#ff5277"
  autoplay
  interval="3000"
  duration="300"
  circular
>
  <block wx:for="{{list}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image mode="widthFix"  src="{{item.image}}" />
    </swiper-item>
  </block>
</swiper>
